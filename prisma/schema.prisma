generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  urls      Url[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Url {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  user        User    @relation(fields: [userId], references: [id])
  userId      String   @db.ObjectId
  shortCode   String    
  customAlias String?
  originalUrl String
  clicks      Click[]
  qrCode      String?
  isActive    Boolean   @default(true)
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([shortCode])
  @@index([customAlias])
}

model Click {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  url       Url?     @relation(fields: [urlId], references: [id])
  urlId     String?  @db.ObjectId
  ipAddress String?
  userAgent String?
  device    String?
  browser   String?
  os        String?
  country   String?
  referrer  String?
  timestamp DateTime @default(now())

@@index([urlId])
@@index([timestamp])

}
